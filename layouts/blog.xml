<rss version="2.0">
  <channel>
    <title :text="$site.title" />
    <link :text="$site.host_url" />
    <description :text="$site.title.suffix(' - Blog')" />
    <generator>Zine -- https://zine-ssg.io</generator>
    <language>en-US</language>
    <lastBuildDate :text="$build.generated.formatHTTP()" />
    <ctx :loop="$page.subpages()">
      <item>
        <title :text="$loop.it.title" />
        <description :text="$loop.it.content()" />
        <link :text="$site.host_url.addPath($loop.it.link())" />
        <pubDate :text="$loop.it.date.formatHTTP()" />
        <guid :text="$site.host_url.addPath($loop.it.link())" />
      </item>
    </ctx>
  </channel>
</rss>
